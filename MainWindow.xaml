<!-- MainWindow.xaml -->
<Window x:Class="PhotoVideoOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Photo &amp; Video Organizer" Height="424" Width="600" Background="Black" Foreground="White">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Grid Margin="20" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Source Folder:" Grid.Row="0" Margin="0,0,0,5"/>
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="SourceTextBox" IsReadOnly="True" Background="Black" BorderBrush="#FF0040FF" Foreground="White"/>
            <Button Content="Browse..." HorizontalAlignment="Right" Width="80" Click="BrowseSource_Click" Background="#FF092F8E" Foreground="White" BorderBrush="#FF19036B"/>
        </Grid>

        <TextBlock Text="Target Folder:" Grid.Row="2" Margin="0,0,0,5"/>
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <TextBox x:Name="TargetTextBox" IsReadOnly="True" Background="Black" BorderBrush="#FF0040FF" Foreground="White"/>
            <Button Content="Browse..." HorizontalAlignment="Right" Width="80" Click="BrowseTarget_Click" Background="#FF092F8E" BorderBrush="#FF19036B" Foreground="White"/>
        </Grid>

        <Button x:Name="StartButton" Content="Start Organizing" Grid.Row="4" HorizontalAlignment="Center" Padding="20,10" Click="Start_Click" BorderBrush="#FF19036B" Background="#FF092F8E" Foreground="White" Margin="0,0,0,50" Grid.RowSpan="2"/>

        <ProgressBar x:Name="ProgressBar" Grid.Row="5" Height="20" Margin="0,20,0,10" Minimum="0" Maximum="100" Value="0" Background="Black" BorderBrush="#FF0004FF" Foreground="#FFF6FFF8"/>

        <TextBlock x:Name="StatusText" Grid.Row="7" Text="Ready" VerticalAlignment="Top" Margin="0,18,0,0"/>
    </Grid>
</Window>