<!-- MainWindow.xaml -->
<Window x:Class="PhotoVideoOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Photo &amp; Video Organizer" Height="400" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Source Folder:" Grid.Row="0" Margin="0,0,0,5"/>
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="SourceTextBox" IsReadOnly="True"/>
            <Button Content="Browse..." HorizontalAlignment="Right" Width="80" Click="BrowseSource_Click"/>
        </Grid>

        <TextBlock Text="Target Folder:" Grid.Row="2" Margin="0,0,0,5"/>
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <TextBox x:Name="TargetTextBox" IsReadOnly="True"/>
            <Button Content="Browse..." HorizontalAlignment="Right" Width="80" Click="BrowseTarget_Click"/>
        </Grid>

        <Button x:Name="StartButton" Content="Start Organizing" Grid.Row="4" HorizontalAlignment="Center" Padding="20,10" Click="Start_Click"/>

        <ProgressBar x:Name="ProgressBar" Grid.Row="5" Height="20" Margin="0,20,0,10" Minimum="0" Maximum="100" Value="0"/>

        <TextBlock x:Name="StatusText" Grid.Row="6" Text="Ready" VerticalAlignment="Bottom"/>
    </Grid>
</Window>